<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_tinted_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:paddingBottom="@dimen/one_and_a_half_grid_unit"
        android:paddingLeft="10dp"
        android:paddingTop="@dimen/one_and_a_half_grid_unit"
        android:textSize="@dimen/spinner_textSize"
        android:visibility="gone"
        tools:text="Item"
        tools:textColor="@android:color/black"/>

    <CheckBox
        android:id="@+id/cb_tinted_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:paddingBottom="@dimen/one_and_a_half_grid_unit"
        android:paddingLeft="10dp"
        android:paddingTop="@dimen/one_and_a_half_grid_unit"
        android:singleLine="true"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="Item"
        tools:textColor="@android:color/black"/>
</LinearLayout>

